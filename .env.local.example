# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Site Configuration
# Use http://localhost:3000 for development
# Use https://victoriaflooringoutlet.ca for production
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Google Analytics (Optional)
# Get your measurement ID from https://analytics.google.com
# Format: G-XXXXXXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Email Service (For newsletter subscriptions)
# TODO: Add MailerLite or ConvertKit API credentials when ready
# MAILERLITE_API_KEY=
# CONVERTKIT_API_KEY=

# ============================================
# LIVE CHAT CONFIGURATION
# ============================================

# OpenAI Configuration (for AI chat assistant)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
NEXT_PUBLIC_OPENAI_MODEL=gpt-4o-mini

# Pusher Configuration (for real-time messaging)
# Get credentials from https://dashboard.pusher.com
NEXT_PUBLIC_PUSHER_APP_KEY=your-pusher-app-key
PUSHER_APP_ID=your-pusher-app-id
PUSHER_SECRET=your-pusher-secret
NEXT_PUBLIC_PUSHER_CLUSTER=us2

# Admin Authentication
# Set a secure password for accessing /admin/chat-monitor
ADMIN_SECRET_KEY=your-secure-admin-password-here

# Chat Feature Toggle
# Set to 'true' to enable live chat feature
NEXT_PUBLIC_CHAT_ENABLED=false

# ============================================
# DATABASE (Vercel Postgres)
# ============================================
# These are auto-configured when you add Vercel Postgres via the dashboard
# POSTGRES_URL=
# POSTGRES_PRISMA_URL=
# POSTGRES_URL_NON_POOLING=
